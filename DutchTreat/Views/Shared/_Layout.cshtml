<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/font-awesome.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse">
        <header class="container">
            <div class="navbar-brand"><i class="fa fa-bug"></i>Dutch Treat</div>
            <button class="navbar-toggle" data-toggle="collapse" data-target="#menu" >&#9776</button>
            <div id="menu" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-controller="App" asp-action="Index">Home</a></li>
                    <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
                    <li><a asp-controller="App" asp-action="Aboutus">About Us</a></li>
                    <li><a asp-controller="App" asp-action="Shop">Shop</a></li>
                    @if (User.Identity.IsAuthenticated)
                    {
                    <li><a asp-controller="Account" asp-action="Logout">Logout</a></li>
                    }
                    else
                    {
                    <li><a asp-controller="Account" asp-action="Login">Login</a></li>
                    }

                </ul>
            </div>
        </header>
    </div>
    <br />
    <section class="container">
        <h2 class="text-center">@ViewBag.Title</h2>
        @RenderBody()
    </section>
    <br />
    <footer class="container">
        <div class="text-center">Dutch Treat</div>
    
    </footer>


    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/main.js"></script>
    @RenderSection("scripts", false)
</body>
</html>

